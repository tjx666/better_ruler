{
  "name": "Better Ruler",
  "short_name": "Ruler",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "A better ruler with more convenience to measure elements in a web page. 一个网页测量工具，它可以吸附到网页元素周围，从而更方便的测量。",
  "author":"paul",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Better Ruler",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "activeTab", "storage"
  ],
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "css.css"
  ]
}