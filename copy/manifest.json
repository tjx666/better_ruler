{
  "name": "Better Ruler",
  "short_name": "Ruler",
  "version": "1.2.2",
  "manifest_version": 2,
  "description": "A better ruler with more convenience to measure elements on a web page. 一个网页测量工具，可以自由测量。也可吸附和高亮当前hover的元素自动测量，并显示大小。",
  "author":"paul",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_title": "Better Ruler",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "activeTab", "storage"
  ],
  "background":{
    "scripts":["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "css.css"
  ]
}